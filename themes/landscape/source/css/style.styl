@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"

global-reset()

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

@font-face
  font-family: FontAwesome
  font-style: normal
  font-weight: normal
  src: url(font-icon-path + ".eot?v=#" + font-icon-version)
  src: url(font-icon-path + ".eot?#iefix&v=#" + font-icon-version) format("embedded-opentype"),
       url(font-icon-path + ".woff?v=#" + font-icon-version) format("woff"),
       url(font-icon-path + ".ttf?v=#" + font-icon-version) format("truetype"),
       url(font-icon-path + ".svg#fontawesomeregular?v=#" + font-icon-version) format("svg")

html, body, #container
  height: 100%

body
  background: color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%
  line-height 22px

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  .mobile-nav-on &
    left: mobile-nav-width

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"

if sidebar
  @import "_partial/sidebar"

panel-header()
  margin: 0 -8px
  background-color: arguments
  position: relative
  bottom: -12px
  padding: 4px 8px
  padding-bottom: 16px
  line-height: 12px
  font-weight: bold
  font-size: 16px
  border-top: 1px solid #F5F5F5
  color: #ffffff

panel()
  background-color : #fff
  margin : 0 -8px
  margin-top : -10px
  padding : 8px
  border-bottom: 2px solid arguments;
  a
    color: arguments
  br:first-child
    display: none
  &.catalog
    line-height: 16px
    font-size: 16px

.green-panel-header {
  panel-header: #5CB85C
}
.green-panel {
  panel : #5CB85C
}

.yellow-panel-header {
  panel-header: #F0AD4E
}
.yellow-panel {
  panel : #F0AD4E
}

.blue-panel-header {
  panel-header: #337AB7
}
.blue-panel {
  panel : #337AB7
}

.red-panel-header {
  panel-header: #D9534F
}
.red-panel {
  panel: #D9534F
}